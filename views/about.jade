    script.
      $(document).ready(function() {
      // animsition
      $(".image").animsition({
      linkElement: '.animsition-link',
      loading: true,
      loadingParentElement: 'body',
      loadingClass: 'animsition-loading',
      loadingInner: '', // e.g '<img src="loading.svg" />'
      timeout: false,
      timeoutCountdown: 5000,
      onLoadEvent: true,
      browser: [ 'animation-duration', '-webkit-animation-duration'],
      overlay : false,
      overlayClass : 'animsition-overlay-slide',
      overlayParentElement : 'body',
      transition: function(url){ window.location.href = url; }
      });
      });
  style.cp-pen-style.
    body, html {
    height: 100%;
    }
    .image {
    background-color: black;
    background-size: cover;
    height: 100%;
    }
    .image .heading {
    color: white;
    text-align: center;
    padding-top: 300px;
    }
    .image p {
    text-align: center;
    padding: 20px;
    }
    .image p .btn {
    background-color: transparent;
    color: white;
    border: 1px solid white;
    width: 50px;
    height: 50px;
    padding: 10px;
    font-size: 1.2em;
    }
    img{
    width: 50px;
    height: 50px;
    }
    .image p .btn:hover {
    color: gray;
    border-color: gray;
    }
    .navbar {
    height: 80px;
    background-color: transparent;
    border: none;
    color: white;
    z-index: 100;
    transition: background-color 1s ease 0s;
    }
    .navbar-default .navbar-brand {
    margin-top: 10px;
    color: white;
    }
    .navbar-default .navbar-nav > li > a {
    color: white;
    margin: 10px 5px 5px 5px;
    }
    /*set color of collapsible button border when screen shrinked*/
    .navbar-default .navbar-toggle {
    border-color: white;
    }

    .navbar-default .navbar-toggle .icon-bar {
    color: white;
    background-color: white;
    }
    .image p{
    padding-top:100px;
    }


    img {
    border-style: solid;
    border-width: 5px;
    border-color:white;
    border-radius: 55px 55px 55px 55px;
    }

    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
    width: 70%;
    height: 400px;
    margin: auto;
    }

    .description{
    position: absolute;
    margin: auto;
    top: -250px;
    right: 0;
    bottom: 0;
    left: 400px;
    width: 650px;
    height: 100px;
    }

    .description > h1{
    color:white;
    }

    .description > p{
    color:white;
    }

    .description > hr{
    color:white;
    border-width: 3px;
    }
 
    /*responsive web*/
    @media screen and (max-width:900px){
    /*body color*/
    body{
    background-color:black;
    }
    /*.description goes to bottom of carousel*/
    .description{
    position:relative;
    display:block;
    width:100%;
    left:0px;
    top:10px;
    }
    /*set it invisible when width get shrinked*/
    .description > hr {
    display:none;
    }
    .carousel-inner > .item > img {
    width:50%;
    /*margin:0;this can set carousel to the left but not text in it*/
    }
    }


