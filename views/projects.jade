        lang.innerHTML = '<b id="language" style="color:white;">'+'swift&nbsp'+'<br />'+'objective-c&nbsp'+'<br />'+'nodejs&nbsp'+'<br />'+'mysql&nbsp'+'<br />'+'aws&nbsp'+'<br />'+'2018&nbsp'+'</b>'
