    script.
      function myFunction(imgs) {
      var className = imgs.getAttribute('class');
      var expandImg = document.getElementById("expandedImg");
      var website = document.getElementById("website");
      var description = document.getElementById("description");
      var lang = document.getElementById("language");
      var github = document.getElementById("github");

      expandImg.src = imgs.src;
      website.innerHTML = '<h3>'+imgs.alt+'</h3>';
      expandImg.parentElement.style.display = "block";

      if(className == 'image-voca'){

        website.href = 'http://www.imagevoca.com/'
        description.innerHTML = '&nbsp&nbspan educational app that people can memorize vocabulary as visualizing its illustration'
        lang.innerHTML = '<b id="language" style="color:white;">'+'swift&nbsp'+'<br />'+'objective-c&nbsp'+'<br />'+'nodejs&nbsp'+'<br />'+'mysql&nbsp'+'<br />'+'2016&nbsp'+'</b>'
        github.style.display = 'none'

      }else if(className == 'image-speaking'){

        website.href = 'https://appadvice.com/app/ec-9d-b4-eb-af-b8-ec-a7-80-ec-8a-a4-ed-94-bc-ed-82-b9/1179745914'
        description.innerHTML = '&nbsp&nbspan innovative tool that provides environment where people can practice english as they speak real sentence'
        lang.innerHTML = '<b id="language" style="color:white;">'+'swift&nbsp'+'<br />'+'objective-c&nbsp'+'<br />'+'nodejs&nbsp'+'<br />'+'mysql&nbsp'+'<br />'+'2016&nbsp'+'</b>'
        github.style.display = 'none'

