     body, html{
     background-color:black;
     height:100%;
     }

     .navbar {
     height: 80px;
     background-color: transparent;
     border: none;
     color: white;
     z-index: 100;
     transition: background-color 1s ease 0s;
     }
     .navbar-default .navbar-brand {
     margin-top: 10px;
     color: white;
     }
     .navbar-default .navbar-nav > li > a {
     color: white;
     margin: 10px 5px 5px 5px;
     }
     //사이즈 줄였을때 보이는 collapsible button border 컬러 설정
    .navbar-default .navbar-toggle {
     border-color: white;
     }

    .navbar-default .navbar-toggle .icon-bar {
     color: white;
     background-color: white;
     }

     /* The grid: Four equal columns that floats next to each other */
     .column {
     float: left;
     width: 25%;
     padding: 10px;
     }
     /* Style the images inside the grid */
     .column img {
     opacity: 0.8;
     height:150px;
     cursor: pointer;
     }
     .column img:hover {
     opacity: 1;
     }

     .row {
     margin: 0 auto;
     padding: 15px;
     width: 90%;
     }

     .slick-slide {
     background: $c1;
     color: white;
     padding: 40px 0;
     }


     /* The expanding image container */
     .container {
     position: relative;
     }

     .image_container{
     border-style: solid;
     border-width: 5px;
     border-color:white;
     position: absolute; 
     margin: auto; 
     top: 170px; right: 0; bottom: 0; left:0; width:800px; height:400px;
     }


     .bottom-center{
     background-color:black;
     }

     /*responsive web*/
     @media and screen (max-width:900px){
     body{
     background-color:blue;
     }
     .image_container{
     border-color:red;
     }
     }


